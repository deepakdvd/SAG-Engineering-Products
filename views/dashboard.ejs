<!DOCTYPE html>
<html lang="en">
<head>
  <title>Dashboard</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" media="all">
  <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">

  <style type="text/css">
    .nav-tabs > li {
      float:none;
      display:inline-block;
      zoom:1.4;
  }

  .nav-tabs {
      text-align:center;
  }
  .liftofitm{
    border-bottom: 1px solid grey;
  }
  </style>
</head>
<body class="style-1">

<div class="container-fluid">
<div class="row">
  <a href="/dashboard"><h1 class="text-center contit">Dashboard</h1></a>
  <hr>
  <h3 class="text-center contit">Welcome !</h3>

  <ul class="nav nav-tabs text-center">
      <li class="active">
        <a  href="#1" data-toggle="tab" onclick="showA();">Add Image</a>
      </li>
      <li><a href="#2" data-toggle="tab" onclick="showB();">Edit Image</a>
      </li>
      <li><a href="#v3" data-toggle="tab" style="display: none;">Edit Image</a>
      </li>
  </ul>

<div class="tab-content clearfix">

   <div class="tab-pane active" id="1">
   <div class="col-sm-12">
   <form method="post" action="fileupload" enctype="multipart/form-data">
       <div class="col-sm-6 col-md-6 col-md-push-3">
         <div class="form-group"> 
       <label for="full_name_id" class="control-label">Image Name</label>
       <input type="text" class="form-control" id="" name="imgname" placeholder="Enter name of the image" required>
     </div>
     <br>
      <div class="form-group"> 
       <label for="full_name_id" class="control-label">Upload Image { Size must be 400 x 400 }</label>
       <input type="file" class="form-control" id="" name="image" placeholder="Enter your email-id" required>
     </div>
     <br>
   <!-- <div class="form-group"> 
    <label for="full_name_id" class="control-label">Order Description</label>
    <textarea type="text" class="form-control" id="" name="desc" placeholder="Mention the Products you want to order" required></textarea>
  </div>
  <br> -->
       </div>

     <div class="col-sm-12 text-center">
     <button class="btn btn-lg btn-info">Submit</button>
     </div>
    </form>

  </div>
  </div>
<%for(var i=0;i < alldata.length; i++){%>
 <div class="tab-pane" id="2">
   
    <div class="col-sm-12 col-md-10 col-md-push-1 liftofitm">
      <div class="col-sm-4"></div> 
      <div class="col-sm-4"><h2><%=alldata[i].Title%></h2></div>
      <div class="col-sm-4">
      <h2>
        <button class="btn btn-warning btn-lg" >Edit</button>&nbsp;&nbsp;&nbsp;&nbsp;
        <button class="btn btn-danger btn-lg" onclick="deleteimage('<%=alldata[i]._id%>')">Delete</button>
        </h2>
       </div>
    </div>
   
 </div>
<%}%>
     <div class="tab-pane" id="vv3">
   <div class="col-sm-12">
   <form action="update" method="post" enctype="multipart/form-data">
   <input type="hidden" name="unameid" id="unameid">
       <div class="col-sm-6 col-md-6 col-md-push-3">
         <div class="form-group"> 
           <label for="full_name_id" class="control-label">Enter new Name</label>
           <input type="text" class="form-control" id="imgname" name="imgname" placeholder="" readonly>
         </div>
     <br>
      <div class="form-group"> 
       <label for="full_name_id" class="control-label">Upload New Image { Size must be 400 x 400 }</label>
       <input type="file" class="form-control" id="" name="image" placeholder="Enter your email-id" required>
     </div>
     <br>
   </div>

     <div class="col-sm-12 text-center">
     <button class="btn btn-lg btn-info">Submit</button>
     </div>
    </form>

  </div>
  </div>
  <script>
    function edit(a, b){
      $('#imgname').val(b);
      $('#unameid').val(a);
      
      $('#vv3').show();
      $('#2').hide();
      $('#1').hide();
    }
    function showA(){
      $('#vv3').hide();
      $('#2').hide();
      $('#1').show();
    }
    function showB(){
      $('#vv3').hide();
      $('#2').show();
      $('#1').hide();
    }



    function deleteimage(id){
      $.ajax({
           type: 'POST',
          url: '/imgdelete?id='+id,
          success: function(data) {
            alert('Image sucessfully Deleted')
          }
        });
      console.log(id);
    }
  </script>



</div>
<hr>
</div>
</div>
</body>
</html>